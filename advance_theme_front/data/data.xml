<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="dynamic_snippet_is_show_categories_action" model="ir.actions.server">
            <field name="name">Categorias Seleccionadas</field>
            <field name="model_id" ref="website_sale.model_product_public_category"/>
            <field name="state">code</field>
            <field name="code">
DynamicFilter = model.env['website.snippet.filter']
response = DynamicFilter._get_public_categories('is_show')
            </field>
        </record>

        <record id="dynamic_snippet_all_categories_filter" model="ir.filters">
            <field name="name">Todas las categorias</field>
            <field name="model_id">product.public.category</field>
            <field name="user_id" eval="False" />
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="sort">["id desc"]</field>
        </record>

        <record id="dynamic_filter_all_categories" model="website.snippet.filter">
            <field name="filter_id" ref="advance_theme_front.dynamic_snippet_all_categories_filter"/>
            <field name="field_names">name,image_512</field>
            <field name="limit" eval="16"/>
            <field name="name">Todas las categorias</field>
        </record>

        <record id="dynamic_filter_is_show_categories" model="website.snippet.filter">
            <field name="action_server_id" ref="advance_theme_front.dynamic_snippet_is_show_categories_action"/>
            <field name="field_names">name,image_512</field>
            <field name="limit" eval="16"/>
            <field name="name">Categorias Seleccionadas</field>
        </record>
    </data>
</odoo>
