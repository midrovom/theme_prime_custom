<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="snippets" inherit_id="website.snippets" name="e-commerce snippets">
        <xpath expr="//t[@id='installed_snippets_hook']" position="after">
            <t snippet-group="categories" t-snippet="website.s_snippet_group" string="Categrias"
                t-thumbnail="/website/static/src/img/snippets_thumbs/s_dynamic_products.svg"/>
        </xpath>

        <xpath expr="//snippets[@id='snippet_structure']" position="inside">
            <t id="sale_categories_hook" />
        </xpath>

        <xpath expr="//t[@id='sale_categories_hook']" position="replace">
            <t t-snippet="website_sale.s_dynamic_snippet_categories" string="Products" group="products"/>
        </xpath>
    </template>

</odoo>
