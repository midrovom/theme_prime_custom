<odoo>
    <!-- Registro de snippet de check para atributos -->
    <record id="product_attribute_view_form_inherit_dia" model="ir.ui.view">
        <field name="name">product.attribute.view.form.inherit.dia</field>
        <field name="model">product.attribute</field>
        <field name="inherit_id" ref="product.product_attribute_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='visibility']" position="after">
                <field name="attribute_custom"/>
                <field name="filter_attribute"/>
            </xpath>
        </field>
    </record>
</odoo>