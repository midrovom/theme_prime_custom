<odoo>

    <template id="dynamic_snippet_add_image_block" inherit_id="website.s_dynamic_snippet_template">
        <xpath expr="//section[@class='s_dynamic_snippet_title']" position="after">
            <t t-if="custom_template_data and custom_template_data.get('template_key') == 'product_product_style_2'">
                <div class="s_dynamic_snippet_image_block text-center my-3">
                    <img class="img-fluid oe_image oe_editable" data-oe-type="image"
                         data-oe-expression="snippet_custom_img"
                         src="/web/static/img/placeholder.png"
                         style="max-width:220px;" />
                </div>
            </t>
        </xpath>
    </template>

    <template id="dynamic_snippet_image_block_options" inherit_id="website.s_dynamic_snippet_options_template">
        <xpath expr="." position="inside">
            <div data-no-preview="true"
                 t-attf-data-selector="#{snippet_selector}"
                 data-target=".s_dynamic_snippet_image_block">

                <we-button-group string="Brand Image Position">
                    <we-button data-select-class="text-center" title="Top">Top</we-button>
                    <we-button data-select-class="s_dynamic_snippet_image_left" title="Left">Left</we-button>
                    <we-button data-select-class="d-none" title="None">None</we-button>
                </we-button-group>

                <!-- Hace editable el bloque (como el tÃ­tulo) -->
                <div data-js="DynamicSnippetImage"
                     data-selector=".s_dynamic_snippet_image_block"/>
            </div>

        </xpath>

    </template>

    <!-- Opciones para seleccionar las marcas -->
    <template id="s_dynamic_snippet_products_template_options_brand" inherit_id="website.s_dynamic_snippet_options_template">
        <xpath expr="//we-select[@data-name='filter_opt']" position="after">
            <t t-if="snippet_name == 'dynamic_snippet_products'">
                <we-select string="Brand" data-name="product_brand_opt" data-attribute-name="productBrandId" data-no-preview="true">
                    <we-button data-select-data-attribute="all">Todas las marcas</we-button>
                </we-select>
            </t>
        </xpath>
    </template>
</odoo>
