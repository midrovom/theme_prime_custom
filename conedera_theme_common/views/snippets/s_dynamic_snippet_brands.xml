<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="s_dynamic_snippet_products_template_options_inherit" inherit_id="website.s_dynamic_snippet_options_template">
        <xpath expr="//we-select[@data-name='filter_opt']" position="after">
            <t t-if="snippet_name == 'dynamic_snippet_products'">
                <we-select string="Brand" data-name="product_brand_opt" data-attribute-name="productBrandId" data-no-preview="true">
                    <we-button data-select-data-attribute="all">All Brands</we-button>
                    <we-button data-select-data-attribute="current">Current Brand or All</we-button>
                </we-select>
            </t>
        </xpath>
    </template>
</odoo>


