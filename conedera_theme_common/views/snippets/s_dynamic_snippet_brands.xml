<odoo>
    <template id="s_dynamic_snippet_products_template_options_brand" inherit_id="website.s_dynamic_snippet_options_template">
        <xpath expr="//we-select[@data-name='filter_opt']" position="after">
            <t t-if="snippet_name == 'dynamic_snippet_products'">
                <we-select string="Brand" data-name="product_brand_opt" data-attribute-name="productBrandId" data-no-preview="true">
                    <we-button data-select-data-attribute="all">Todas las marcas</we-button>
                </we-select>
            </t>
        </xpath>
    </template>



    <template id="dynamic_snippet_products_wrapper_style_2" inherit_id="website.s_dynamic_snippet_template">
        <xpath expr="//div[@class='dynamic_snippet_template']" position="replace">
            <t t-if="custom_template_data and custom_template_data.get('template_key') == 'product_product_style_2'">
                <div class="row align-items-start g-4">
                    <div class="col-lg-4 text-center my-4">
                        <img class="img-fluid oe_image oe_editable"
                             data-oe-type="image"
                             data-oe-expression="snippet_custom_img"
                             src="/web/static/img/placeholder.png"
                             style="max-width:220px;" />
                    </div>

                    <!-- Columna derecha: contenido ORIGINAL del carrusel -->
                    <div class="col-lg-8">
                        <div class="dynamic_snippet_template">
                            <t t-out="0"/>
                        </div>
                    </div>

                </div>
            </t>

            <!-- Para todos los demÃ¡s templates: dejar igual -->
            <t t-else="">
                <div class="dynamic_snippet_template">
                    <t t-out="0"/>
                </div>
            </t>

        </xpath>

    </template>



</odoo>
