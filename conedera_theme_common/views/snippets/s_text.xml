<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="s_accordion_single" name="Accordion (Single)">
        <section class="s_text_block">
            <t t-set="uniq" t-value="datetime.datetime.now().microsecond"/>
            <div class="s_accordion" data-name="Accordion">
                <div id="myCollapse" t-attf-class="{{extra_classes}} accordion">
                    <div class="accordion-item position-relative z-1" data-name="Accordion Item">
                        <button type="button"
                                t-attf-id="accordion-button{{uniq}}"
                                class="accordion-header accordion-button justify-content-between gap-2 bg-transparent h6-fs fw-bold text-decoration-none text-reset transition-none"
                                data-bs-toggle="collapse"
                                t-attf-data-bs-target="#myCollapseTab{{uniq}}"
                                t-attf-aria-controls="myCollapseTab{{uniq}}"
                                aria-expanded="true">
                            <span class="flex-grow-1">
                                Accordion title
                            </span>
                        </button>
                        <div t-attf-id="myCollapseTab{{uniq}}"
                            class="accordion-collapse collapse show"
                            data-bs-parent="#myCollapse"
                            role="region"
                            t-attf-aria-labelledby="accordion-button{{uniq}}">
                            <div class="accordion-body">
                                <p>
                                    Accordion content goes here. You can edit this text directly from the website editor.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>
</odoo>

