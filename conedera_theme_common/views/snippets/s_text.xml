<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Snippet Accordion Descripción -->
    <template id="s_text_block_1" name="Simple Accordion">
        <section class="o_snippet s_simple_accordion pt40 pb40 o_cc">
            <div class="container s_allow_columns">
                <div class="sa_accordion">
                    <div class="sa_item">
                        <div class="sa_header">
                            <h4>Descripción del producto</h4>
                            <span class="sa_icon">+</span>
                        </div>
                        <div class="sa_body">
                            <p>
                                Aquí puedes escribir la descripción del producto.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>

</odoo>




