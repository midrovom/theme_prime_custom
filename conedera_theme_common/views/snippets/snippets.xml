<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="add_my_snippet_to_columns" inherit_id="website.snippets">
        <xpath expr="//t[@t-snippet='website.s_cards_soft']" position="after">
            <t t-snippet="conedera_theme_common.s_key_images_2" string="Key Images Custom" group="columns">
                <keywords>columns, gallery, pictures, photos, media, showcase, portfolio, custom</keywords>
            </t>
        </xpath>
    </template>

    <!-- Template de product Dynamic -->
    <template id="snippets" inherit_id="website.snippets" name="e-commerce snippets">
        <xpath expr="//t[@id='installed_snippets_hook']" position="after">
            <t snippet-group="brands" t-snippet="website.s_snippet_group" string="Marcas"
                t-thumbnail="/website/static/src/img/snippets_thumbs/s_dynamic_products.svg"/>
        </xpath>

        <xpath expr="//snippets[@id='snippet_structure']" position="inside">
            <t id="sale_brands_hook" />
        </xpath>

        <!-- Muestra el snippet personalizado -->
        <xpath expr="//t[@id='sale_brands_hook']" position="replace">
            <t t-snippet="conedera_theme_common.s_dynamic_snippet_brand" string="Marcas" group="brands"/>
        </xpath>
    </template>
</odoo>
