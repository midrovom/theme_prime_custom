<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="add_my_snippet_to_columns" inherit_id="website.snippets">
        <xpath expr="//t[@t-snippet='website.s_cards_soft']" position="after">
            <t t-snippet="conedera_theme_common.s_key_images_2" string="Key Images Custom" group="columns">
                <keywords>columns, gallery, pictures, photos, media, showcase, portfolio, custom</keywords>
            </t>
        </xpath>
        
        <!-- Registro de snippet de cuadro de texto -->
        <xpath expr="//t[@t-snippet='website.s_text_block']" position="after">
            <t t-snippet="conedera_theme_common.s_text_block_custom" string="Texblog" group="text">
                <keywords>content, paragraph, article, body, description, information</keywords>
            </t>
        </xpath>
    </template>
</odoo>
