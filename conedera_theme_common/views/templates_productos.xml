<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="product_inherit_remove_description" inherit_id="website_sale.product" name="Product Inherit Remove Description">
        <xpath expr="//div[@id='product_details']" position="inside">
        <div class="oe_structure oe_empty" id="oe_structure_product_detail_snippet"
             t-att-data-editor-message="editor_message"/>
        </xpath>
    </template>

    <!-- Select para campo de texto -->
    <template id="s_text_block_select" inherit_id="s_text_block" name="Text Select Toggle">
        <xpath expr="//div[@class='container s_allow_columns']" position="replace">
            <div class="container s_allow_columns">
                <label class="fw-bold mb-2">Descripción del producto</label>
                <select id="toggleDescription" class="form-select w-auto mb-3">
                    <option value="hide" selected>Ocultar</option>
                    <option value="show">Mostrar</option>
                </select>>
                <div id="descriptionBox" class="description-box" style="display:none;">
                    <textarea class="form-control description-textarea" rows="4"
                              placeholder="Escriba la descripción aquí..."></textarea>
                </div>
            </div>
        </xpath>
    </template>

</odoo>




