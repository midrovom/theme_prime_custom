<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="product_inherit_remove_description" inherit_id="website_sale.product" name="Product Inherit Remove Description">
        <xpath expr="//div[@id='product_details']" position="inside">
        <div class="oe_structure oe_empty" id="oe_structure_product_detail_snippet"
             t-att-data-editor-message="editor_message"/>
        </xpath>
    </template>

    <!-- SecciÃ³n de marcas -->
    <template id="product_inherit_attributes_top" inherit_id="website_sale.product">
        <xpath expr="//t[@t-call='website_sale.variants']" position="replace"/>
            <xpath expr="//h1[@itemprop='name']" position="before">
                <div class="o_product_attributes_top mb-3">
                    <t t-call="website_sale.variants">
                        <t t-set="ul_class" t-value="'flex-column'"/>
                        <t t-set="parent_combination" t-value="None"/>
                        <t t-set="combination"
                        t-value="product._get_combination_info()['combination']"/>
                    </t>
                </div>
            </xpath>
    </template>


</odoo> 