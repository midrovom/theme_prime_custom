<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="product_inherit_remove_description" inherit_id="website_sale.product" name="Product Inherit Remove Description">
        <xpath expr="//div[@id='product_details']" position="inside">
        <div class="oe_structure oe_empty" id="oe_structure_product_detail_snippet"
             t-att-data-editor-message="editor_message"/>
        </xpath>
    </template>

    <!-- Mostrar Marca y atributos arriba del nombre -->
    <template id="product_inherit_attributes_top" inherit_id="website_sale.product">
        <xpath expr="//h1[@itemprop='name']" position="before">
            <t t-set="single_value_attributes"
                t-value="product.valid_product_template_attribute_line_ids._prepare_single_value_for_display()"/>
                    <div t-if="single_value_attributes" class="o_product_brand_top mb-2">
                        <t t-foreach="single_value_attributes" t-as="attribute">
                            <t t-if="attribute.name == 'Marca'">
                        <span class="text-muted fw-semibold">
                            <t t-foreach="single_value_attributes[attribute]" t-as="ptal">
                                <t t-esc="ptal.product_template_value_ids._only_active().name"/>
                            </t>
                        </span>
                    </t>
                </t>
            </div>
        </xpath>
    </template>

    <!-- Apartado de Descripción -->
    <!-- Eliminar seccion original de descripción -->
    <template id="remove_original_description" inherit_id="website_sale.product">
        <xpath expr="//div[@t-field='product.description_ecommerce']" position="replace"/>
    </template>

    <!-- Acordeon de descripción -->
    <template id="product_description_and_attributes" inherit_id="website_sale.product">
        <xpath expr="//div[@id='o_wsale_cta_wrapper']" position="after">
            <div class="accordion mt-3" id="accordionProductDescription">
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingDescription">
                        <button class="accordion-button collapsed" type="button"
                                data-bs-toggle="collapse" data-bs-target="#collapseDescription"
                                aria-expanded="false" aria-controls="collapseDescription">
                            Descripción del producto
                        </button>
                    </h2>
                    <div id="collapseDescription" class="accordion-collapse collapse"
                        aria-labelledby="headingDescription" data-bs-parent="#accordionProductDescription">
                        <div class="accordion-body">
                            <div t-field="product.description_ecommerce"/>
                        </div>
                    </div>
                </div>
            </div>
            <t t-if="product.attribute_line_ids.filtered(lambda l: l.attribute_id.attribute_custom)">
                <div class="accordion mt-3" id="accordionCustomAttributes">
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingCustomAttrs">
                            <button class="accordion-button collapsed"
                                    type="button"
                                    data-bs-toggle="collapse"
                                    data-bs-target="#collapseCustomAttrs">
                                Características del producto
                            </button>
                        </h2>
                        <div id="collapseCustomAttrs"
                            class="accordion-collapse collapse"
                            data-bs-parent="#accordionCustomAttributes">
                            <div class="accordion-body">
                                <div class="row">
                                    <t t-foreach="product.attribute_line_ids.filtered(lambda l: l.attribute_id.attribute_custom)" t-as="line" t-key="line.id">
                                        <t t-foreach="line.value_ids" t-as="val" t-key="val.id">
                                            <div class="col-6 mb-3">
                                                <div class="d-flex align-items-center">
                                                    <img t-if="val.dr_image"
                                                        t-att-src="'/web/image/product.attribute.value/%s/dr_image' % val.id"
                                                        style="height:30px; width:auto; margin-right:8px;"
                                                        alt="attr"/>
                                                    <span t-out="val.name"/>
                                                </div>
                                            </div>
                                        </t>
                                    </t>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </xpath>
    </template>

    <!-- Precio del producto -->
    <template id="product_price_inherit_precio_final" inherit_id="website_sale.product_price">
        <xpath expr="//span[contains(@class,'oe_price')]" position="inside">
            <span class="me-1 fw-bold">Precio Final:</span>
            <span class="ms-1 text-muted">(+IVA)</span>
        </xpath>
    </template>






</odoo> 