<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="option_header_brand_logo" name="Custom Header Brand Logo" inherit_id="website.option_header_brand_logo">
        <xpath expr="//a" position="replace">
            <a data-name="Navbar Logo" href="/" >
                <span t-field="website.logo" t-options="{'widget': 'image', 'width': 200, 'height': 45}" role="img" t-att-aria-label="'Logo of %s' % website.name" t-att-title="website.name"/>
            </a>
        </xpath>
    </template>

    <!--Icono de imagen-->
    <record id="website_menus_form_view_inherit_icon" model="ir.ui.view">
        <field name="name">website.menu.form.inherit.icon</field>
        <field name="model">website.menu</field>
        <field name="inherit_id" ref="website.website_menus_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='sequence']" position="after">
                <div class="o_row">
                    <label for="icon_image" string="Icono del menÃº"/>
                    <field name="icon_image" widget="image" class="oe_avatar"
                           options="{'size': (48, 48)}"/>
                </div>
            </xpath>
        </field>
    </record>
    

</odoo>
