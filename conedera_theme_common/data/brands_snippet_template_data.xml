<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="dynamic_filter_template_product_public_brands_style_2" name="Image + Brand">
            <t t-foreach="records" t-as="data">
                <t t-set="record" t-value="data['_record']"/>

                <div class="card o_dynamic_brand_card text-center border-0 mx-4">
                    <a t-att-href="data['url']">
                        <img class="card-img-top o_brand_image"
                            t-att-src="data['image_512']"
                            t-att-alt="record.name"/>
                    </a>

                    <div class="card-body">
                        <h6 class="card-title mb-0" t-esc="record.name"/>
                        <small t-esc="data['product_count'] + _(' products')"/>
                    </div>
                </div>
            </t>
        </template>

    </data>  
</odoo>