<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Snippet de productos con carrusel -->
        <template id="dynamic_filter_template_product_template_style_1" name="Borderless Product n°1">
            <!-- Clase que el JS reconoce -->
            <div class="s_dynamic_snippet_brand">
                <t t-foreach="records" t-as="data" data-thumb="/website_sale/static/src/img/snippets_options/product_borderless_1.svg">
                    <div class="o_carousel_product_card bg-transparent w-100 card border-0">
                        
                        <!-- Ribbon de muestra -->
                        <div t-if="is_sample" class="h5 o_ribbon_right bg-primary text-uppercase">Sample</div>
                        
                        <!-- ID del producto -->
                        <input type="hidden" name="product-id" t-att-data-product-id="data['_record'].id"/>
                        
                        <!-- Imagen y enlace al producto -->
                        <a class="o_carousel_product_img_link o_dynamic_product_hovered stretched-link" t-att-href="data['url']">
                            <div class="overflow-hidden rounded">
                                <img class="card-img-top o_img_product_square o_img_product_cover h-auto"
                                     loading="lazy"
                                     t-att-src="data['image_512']"
                                     t-att-alt="data['name']"/>
                            </div>
                        </a>
                        
                        <!-- Cuerpo de la tarjeta -->
                        <div class="o_carousel_product_card_body d-flex flex-wrap flex-column justify-content-between h-100 p-3">
                            
                            <!-- Nombre del producto -->
                            <div class="h6 card-title"><t t-esc="data['name']"/></div>
                            
                            <!-- Rating y precio -->
                            <div>
                                <!-- Rating si está activo -->
                                <t t-if="is_view_active('website_sale.product_comment')" t-call="portal_rating.rating_widget_stars_static">
                                    <t t-set="rating_avg" t-value="data['_record'].rating_avg"/>
                                    <t t-set="rating_count" t-value="data['_record'].rating_count"/>
                                </t>
                                
                                <!-- Precio dinámico -->
                                <div class="mt-2">
                                    <span class="text-primary fw-bold">
                                        <t t-esc="data['list_price']"/> $
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </div>
        </template>
    </data>
</odoo>
