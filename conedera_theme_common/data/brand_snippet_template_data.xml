<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="dynamic_filter_template_product_product_style_1" name="Productos por Marca">
        <t t-foreach="records" t-as="data" data-thumb="/website_sale/static/src/img/snippets_options/product_borderless_1.svg">
            <t t-set="record" t-value="data['_record']"/>
            <div class="o_carousel_product_card bg-transparent w-100 card border-0">
                <div t-if="is_sample" class="h5 o_ribbon_right bg-primary text-uppercase">Sample</div>

                <div class="overflow-hidden rounded text-center">
                    <a t-att-href="data['url']">
                        <img class="card-img-top o_img_product_square o_img_product_cover h-auto"
                             loading="lazy"
                             t-att-src="data['image_512']"
                             t-att-alt="record.name"/>
                    </a>
                </div>

                <div class="o_carousel_product_card_body d-flex flex-column align-items-center p-3">
                    <div class="text-muted small" t-esc="data.get('brand')"/>
                    <div class="h6 card-title" t-esc="data.get('display_name')"/>
                </div>
            </div>
        </t>
    </template>

    <template id="dynamic_filter_template_product_product_style_2" name="Productos por Marca">

        <!-- CONTENEDOR EN DOS COLUMNAS -->
        <div class="row align-items-center">

            <!-- COLUMNA IZQUIERDA: Imagen editable -->
            <div class="col-12 col-md-4 text-center mb-4">
                <img class="img-fluid oe_image oe_editable"
                    data-oe-type="image"
                    data-oe-expression="snippet_custom_img"
                    src="/web/static/img/placeholder.png"
                    style="max-width:250px;" />
            </div>

            <!-- COLUMNA DERECHA: CARRUSEL ORIGINAL -->
            <div class="col-12 col-md-8">

                <t t-foreach="records" t-as="data"
                    data-thumb="/website_sale/static/src/img/snippets_options/product_borderless_1.svg">

                    <t t-set="record" t-value="data['_record']"/>

                    <div class="o_carousel_product_card bg-transparent w-100 card border-0">

                        <div class="overflow-hidden rounded text-center">
                            <a t-att-href="data['url']">
                                <img class="card-img-top o_img_product_square o_img_product_cover h-auto"
                                    loading="lazy"
                                    t-att-src="data['image_512']"
                                    t-att-alt="record.name"/>
                            </a>
                        </div>

                        <div class="o_carousel_product_card_body d-flex flex-column align-items-center p-3">
                            <div class="text-muted small" t-esc="data.get('brand')"/>
                            <div class="h6 card-title" t-esc="data.get('display_name')"/>
                        </div>

                    </div>

                </t>

            </div>

        </div>

    </template>




</odoo>
