<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="dynamic_filter_template_product_attribute_value_style_1_" name="Image + Name Brand">
            <t t-foreach="records" t-as="data" data-thumb="/website_sale/static/src/img/snippets_options/product_image_with_name.svg">
                <t t-set="record" t-value="data['_record']"/>
                <div class="card o_dynamic_brand_card text-white text-center border-0 mx-4">
                    <div t-if="is_sample" class="h5 o_ribbon_right bg-primary text-uppercase">Sample</div>

                    <a class="o_carousel_brand_img_link overflow-hidden" t-att-href="data['url']">
                        <img class="card-img-top o_img_brand_square o_img_brand_cover o_dynamic_brand_image"
                             loading="lazy"
                             t-att-src="data['image_512']"
                             t-att-alt="record.name"/>
                    </a>

                    <div class="card-body o_dynamic_brand_body">
                        <h6 class="card-title mb-0 text-white" t-esc="record.name"/>
                    </div>
                </div>
            </t>
        </template>   
    </data>  
</odoo>
