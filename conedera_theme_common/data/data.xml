<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Filtro para todas las marcas -->
        <record id="dynamic_snippet_all_brands_filter" model="ir.filters">
            <field name="name">Todas las marcas</field>
            <field name="model_id">product.attribute.value</field>
            <field name="user_id" eval="False"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="sort">["id desc"]</field>
        </record>

        <record id="dynamic_filter_all_brands" model="website.snippet.filter">
            <field name="filter_id" ref="conedera_theme_common.dynamic_snippet_all_brands_filter"/>
            <field name="field_names">name</field>
            <field name="limit" eval="16"/>
            <field name="name">Brand List</field>
        </record>

        <!-- Filtro para productos por marca -->
        <record id="dynamic_snippet_products_by_brand_filter" model="ir.filters">
            <field name="name">Productos por marca</field>
            <field name="model_id">product.product</field>
            <field name="user_id" eval="False"/>
            <!-- AquÃ­ puedes filtrar por marca si lo necesitas -->
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="sort">["id desc"]</field>
        </record>

        <record id="dynamic_filter_products_by_brand" model="website.snippet.filter">
            <field name="filter_id" ref="conedera_theme_common.dynamic_snippet_products_by_brand_filter"/>
            <field name="field_names">display_name,description_sale,image_512</field>
            <field name="limit" eval="16"/>
            <field name="name">Products By Brand</field>
        </record>
    </data>
</odoo>

