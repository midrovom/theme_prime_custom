<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="dynamic_snippet_all_brands_action" model="ir.actions.server">
            <field name="name">Brands</field>
            <field name="model_id" ref="product.model_product_attribute_value"/>
            <field name="state">code</field>
            <field name="code">
        DynamicFilter = model.env['website.snippet.filter']
        response = DynamicFilter._get_products('all_brands')
            </field>
        </record>

        <record id="dynamic_snippet_products_by_brand_action" model="ir.actions.server">
            <field name="name">Products By Brand</field>
            <field name="model_id" ref="product.model_product_product"/>
            <field name="state">code</field>
            <field name="code">
        DynamicFilter = model.env['website.snippet.filter']
        brand_id = request.params.get('brandId')
        response = DynamicFilter._get_products('products_by_brand', brand_id=brand_id)
            </field>
        </record>

        <record id="dynamic_filter_all_brands" model="website.snippet.filter">
            <field name="action_server_id" ref="conedera_theme_common.dynamic_snippet_all_brands_action"/>
            <field name="model_name">product.attribute.value</field>
            <field name="field_names">name</field>
            <field name="limit">16</field>
            <field name="name">Brand List</field>
        </record>

        <record id="dynamic_filter_products_by_brand" model="website.snippet.filter">
            <field name="action_server_id" ref="conedera_theme_common.dynamic_snippet_products_by_brand_action"/>
            <field name="model_name">product.product</field>
            <field name="field_names">display_name,description_sale,image_512</field>
            <field name="limit">16</field>
            <field name="name">Products By Brand</field>
        </record>

</odoo>
