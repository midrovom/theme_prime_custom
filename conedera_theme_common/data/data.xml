<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Acción de servidor: Productos publicados -->
        <record id="dynamic_snippet_published_products_action" model="ir.actions.server">
            <field name="name">Productos Publicados</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="state">code</field>
            <field name="code">
DynamicFilter = model.env['website.snippet.filter']
response = DynamicFilter._get_public_products()
            </field>
        </record>

        <!-- Filtro estándar: Todos los productos -->
        <record id="dynamic_snippet_all_products_filter" model="ir.filters">
            <field name="name">Todos los productos</field>
            <field name="model_id">product.template</field>
            <field name="user_id" eval="False"/>
            <field name="domain">[('website_published','=',True),('sale_ok','=',True)]</field>
            <field name="context">{}</field>
            <field name="sort">["id desc"]</field>
        </record>

        <!-- Snippet Filter: Todos los productos -->
        <record id="dynamic_filter_all_products" model="website.snippet.filter">
            <field name="filter_id" ref="advance_theme_custom.dynamic_snippet_all_products_filter"/>
            <field name="field_names">name,image_512,list_price</field>
            <field name="limit" eval="16"/>
            <field name="name">Todos los productos</field>
        </record>

        <!-- Snippet Filter: Productos publicados -->
        <record id="dynamic_filter_published_products" model="website.snippet.filter">
            <field name="action_server_id" ref="advance_theme_custom.dynamic_snippet_published_products_action"/>
            <field name="field_names">name,image_512,list_price</field>
            <field name="limit" eval="16"/>
            <field name="name">Productos Publicados</field>
        </record>
    </data>
</odoo> 