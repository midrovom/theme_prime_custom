<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Filtro base para productos por marca -->
        <record id="dynamic_snippet_products_by_brand_filter" model="ir.filters">
            <field name="name">Products by Brand</field>
            <field name="model_id">product.template</field>
            <field name="user_id" eval="False"/>
            <field name="domain">[('website_published', '=', True)]</field>
            <field name="context">{'display_default_code': False, 'add2cart_rerender': False}</field>
            <field name="sort">["name asc"]</field>
            <field name="action_id" ref="website.action_website"/>
        </record>

        <!-- Snippet filter que usa el filtro anterior -->
        <record id="dynamic_filter_products_by_brand" model="website.snippet.filter">
            <field name="filter_id" ref="conedera_theme_common.dynamic_snippet_products_by_brand_filter"/>
            <field name="field_names">display_name,description_sale,image_512</field>
            <field name="limit" eval="16"/>
            <field name="name">Products by Brand</field>
            <!-- ðŸ”¹ Obligatorio: modelo sobre el que trabaja -->
            <field name="model_name">product.template</field>
        </record>
    </data>
</odoo>
