<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Server Action: Productos por Marca -->
        <record id="dynamic_snippet_products_by_brand_action" model="ir.actions.server">
            <field name="name">Productos por Marca</field>
            <field name="model_id" ref="website_sale.model_product_template"/>
            <field name="state">code</field>
            <field name="code">
brand_id = request.params.get('productBrandId')
DynamicFilter = model.env['website.snippet.filter']
response = DynamicFilter._get_products_by_brand(brand_id=brand_id, limit=16)
            </field>
        </record>

        <!-- Filtro dinÃ¡mico que usa el server action -->
        <record id="dynamic_filter_products_by_brand" model="website.snippet.filter">
            <field name="name">Productos por Marca</field>
            <field name="model_name">product.product</field>
            <field name="limit">16</field>
            <field name="product_cross_selling">False</field>
        </record>
    </data>
</odoo>