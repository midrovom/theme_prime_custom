<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Action Server que llama tu mÃ©todo -->
        <record id="dynamic_snippet_products_by_brand_action" model="ir.actions.server">
            <field name="name">Products by Brand</field>
            <field name="model_id" ref="website_sale.model_product_template"/>
            <field name="state">code</field>
            <field name="code">
DynamicFilter = model.env['website.snippet.filter']
response = DynamicFilter._get_products_by_brand(
    model.env['website'].get_current_website(),
    16,
    [('website_published','=',True)],
    brand_id=request.params.get('productBrandId')
)
            </field>
        </record>

        <!-- Snippet filter que usa el action server -->
        <record id="dynamic_filter_products_by_brand" model="website.snippet.filter">
            <field name="action_server_id" ref="dynamic_snippet_products_by_brand_action"/>
            <field name="field_names">display_name,description_sale,image_512</field>
            <field name="limit" eval="16"/>
            <field name="name">Products by Brand</field>
            <field name="model_name">product.template</field>
        </record>
    </data>
</odoo>
