<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">

    <!-- Metodos de pago odoo18 modelo payment -->
    
    <record id="payment_provider_datafast" model="payment.provider">
        <field name="name">DataFast</field>
        <field name="code">datafast</field>
        <field name="image_128" type="base64" file="payment_datafast/static/description/icon.png"/>
        <field name="module_id" ref="base.module_payment_datafast"/>
        <field name="redirect_form_view_id" ref="redirect_form"/>
        <field name="payment_method_ids"
            eval="[Command.set([
                ref('payment.payment_method_card'),
            ])]"/>
    </record>

</odoo>