<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payment_provider_form" model="ir.ui.view">
        <field name="name">DataFast Provider Form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <group name="provider_credentials" position="inside">
                <group invisible="code != 'datafast'">
                    <field name="datafast_url"/>
                    <field name="entity_id"/>
                    <field name="merchant_id"/>
                    <field name="terminal_id"/>
                    <field name="test_mode" invisible="state in ('disabled','enabled')"/>
                    <field name="datafast_access_token"
                           string="Access Token"
                           required="code == 'datafast' and state != 'disabled'"
                           password="True"/>
                </group>
            </group>
            <xpath expr="//page[@name='messages']" position="after">
                <page invisible="code != 'datafast'" name="state_code_datafast" string="Codigos de mensaje">
                    <field name="state_code_ids" widget="one2many_list"
                           views="[(list, ref('view_state_code_list'))]"/>
                </page>
            </xpath>
        </field>
    </record>

    <record id="view_state_code_list" model="ir.ui.view">
        <field name="name">payment.state.code.list</field>
        <field name="model">payment.state.code</field>
        <field name="arch" type="xml">
            <list>
                <field name="code"/>
                <field name="name"/>
            </list>
        </field>
    </record>


