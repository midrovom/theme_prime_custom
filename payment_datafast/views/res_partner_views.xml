        <!-- Vista tree para token.card -->
        <record id="view_token_card_tree_simple" model="ir.ui.view">
            <field name="name">token.card.tree.simple</field>
            <field name="model">token.card</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="token"/>
                </tree>
            </field>
        </record>

