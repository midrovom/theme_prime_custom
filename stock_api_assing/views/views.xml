<odoo>
  <data>
    <!-- explicit list view definition -->
    <record id="view_stock_api_assing_form" model="ir.ui.view">
      <field name="name">view.stock.api.assing.form</field>
      <field name="model">stock.api.assing</field>
      <field name="arch" type="xml">
        <form string="Stock">
          <sheet>
            <group name="group_top">
              <group name="group_left">
                <field name="name"/>
                <field name="date"/>
              </group>
              <group name="group_right">
                <field name="description"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- <record id="stock_api_inherited_tree_view" model="ir.ui.view">
      <field name="name">stock.api.assing.view.tree.inherit</field>
      <field name="model">stock.api.assing</field>
      <field name="inherit_id" ref="stock_api_assing.view_stock_api_assing_visit_tree"/>
      <field name="arch" type="xml">
        <xpath expr="//tree" position="attributes">
          <attribute name="js_class">button_in_tree</attribute>
        </xpath>
      </field>
    </record>  -->

    <record id="view_stock_api_assing_visit_tree" model="ir.ui.view">
      <field name="name">view.stock.api.assing.visit.tree</field>
      <field name="model">stock.api.assing</field>
      <field name="arch" type="xml">
        <list string="Stock">
          <field name="name"/>
          <field name="company_id"/>
          <field name="date"/>
          <field name="description"  widget="text" options="{'truncate': 50}"/>
        </list>
      </field>
    </record>




    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="custom_crm_action_window">
      <field name="name">Control Stock Apis</field>
      <field name="res_model">stock.api.assing</field>
      <field name="view_mode">list,form,kanban</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Control Stock Apis.
        </p>
        <p>
          Click 'Nuevo' para a√±adir nuevos elementos
        </p>
      </field>
    </record>


    <!-- Top menu item -->
    <!-- <menuitem name="Check Update Stock" id="stock_api_assing_menu_root" sequence="10"/> -->
    <menuitem name="Control de Stock api" id="stock_api_assing_menu_root"
            web_icon="stock_api_assing,static/description/icon.png"
            sequence="5"  groups="stock_api_assing.group_stock_api_assing_basic"/>
    <!-- Menu Category -->
    <menuitem name="Operations"                   id="stock_api_assing_data_menu"   parent="stock_api_assing_menu_root" sequence="0"/>
    <menuitem name="Checked Stock"                id="checked_stock_option"         parent="stock_api_assing_data_menu" sequence="1" action="custom_crm_action_window"/>
    <menuitem name="Exportar Ordenes de Compra"   id="update_quotes_option"         parent="stock_api_assing_data_menu" sequence="2" action="update_quotes_action_window"/>
  </data>
</odoo>