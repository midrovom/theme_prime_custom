<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="view_select_products_wizard_form" model="ir.ui.view">
            <field name="name">sale.order.select.products.form</field>
            <field name="model">sale.order.select.products</field>
            <field name="arch" type="xml">
                <form string="Seleccionar Productos">
                    <sheet>
                        <group>
                            <field name="product_ids" widget="many2many_multi" context="{'tree_view_ref': 'stock_api_assing.custom_product_tree_view', 'warehouse_id': warehouse_id}"/>
                            <field name="warehouse_id"
                                options="{'no_create': True, 'no_open': True}"
                                groups="stock_api_assing.group_multi_warehouse"/>
                            <field name="warehouse_id"
                                options="{'no_create': True, 'no_open': True}"
                                readonly="1"
                                groups="!stock_api_assing.group_multi_warehouse"/>
                        </group>
                        <footer>
                            <button string="Agregar" type="object" name="add_products_to_order" class="btn-primary"/>
                            <button string="Cancelar" class="btn-secondary" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- <record id="action_open_select_products_wizard" model="ir.actions.act_window">
            <field name="name">Seleccionar Productos</field>
            <field name="res_model">sale.order.select.products</field>
            <field name="view_mode">form</field>
            <field name="context">{'warehouse_id': default_warehouse_id}</field>
        </record> -->







        <record id="custom_product_tree_view" model="ir.ui.view">
            <field name="name">product.product.tree.custom</field>
            <field name="model">product.product</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name" string="Nombre" class="wrap-text"/>
                    <field name="lst_price" string="Precio"/>
                    <!-- <field name="qty_available" string="Stock"/> -->
                    <field name="location_qty" string="Stock en bodega" class="text-end"/>
                    <!-- <field name="warehouse_qty" /> -->
                    <!-- <field name="stock_quant_ids" widget="one2many_tags"/> -->
                </list>
            </field>
        </record>

        <record id="custom_product_view_kanban" model="ir.ui.view">
            <field name="name">custom.product.view.kanban</field>
            <field name="model">product.product</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <!-- Campos disponibles para usar en el template -->
                    <field name="name"/>
                    <field name="lst_price"/>
                    <field name="location_qty"/>
                    <field name="qty_available" invisible="1"/>

                    <!-- Bloque OBLIGATORIO: Define cÃ³mo se ve cada tarjeta -->
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <!-- Contenido de la tarjeta -->
                                <div class="o_kanban_record_body">
                                    <strong>
                                        <field name="name" string="Nombre" class="wrap-text"/>
                                    </strong>
                                    <div>
                                        Precio: <field name="lst_price"/>
                                    </div>
                                    <div>
                                        Stock: <field name="location_qty"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
            
    </data>
    
</odoo>
