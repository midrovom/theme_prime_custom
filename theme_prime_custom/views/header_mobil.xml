    <template id="template_header_mobile_hide_cart_and_menu" inherit_id="theme_prime.template_header_mobile_2">
        <!-- Ocultar menu-->
        <xpath expr="//button[contains(@class, 'tp-menu-sidebar-action')]" position="replace"></xpath>
        <!-- Ocultar carrito -->
        <!-- <xpath expr="//t[@t-call='theme_prime.component_account_info']" position="replace"/> -->

        <xpath expr="//t[@t-call='theme_prime.component_account_info']" position="replace">
            <t t-if="website.company_id.id != 2">
                <t t-call="theme_prime.component_account_info"/>
            </t>
        </xpath>

    </template>

