<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="snippets" inherit_id="website.snippets">
        <t t-snippet="website.s_banner" position="before">
            <t t-snippet="theme_prime_custom.s_d_2_column_snippet_conedera" string="2 Col Deal Conedera" group="theme_prime_dynamic">
                <keywords>products, dynamic</keywords>
            </t>
        </t>
    </template>

    <!-- Banner -->
    <template id="s_banner" inherit_id="theme_prime.snippets" name="Banner - Conedera">
        <xpath expr="//t[@t-snippet='theme_prime.s_banner_15']" position="after">
            <t t-snippet="theme_prime_custom.s_banner_16" string="Banner 16" group="theme_prime_banner">
                <keywords>banner, hero</keywords>
            </t>
        </xpath>
    </template>

    <!-- Footer -->
    <template id="snippet_options_inherit" inherit_id="website.snippet_options">
        <xpath expr="//we-select[@data-variable='footer-template']/we-button[last()]" position="after">
            <we-button title="Prime Footer Style - 12" data-name="tp_footer_style_12_opt" data-customize-website-views="theme_prime_custom.template_footer_style_12" data-customize-website-variable="'prime_style_12'" data-img="/theme_prime/static/src/img/options/footer_1.svg"/>
        </xpath>
    </template>


</odoo>