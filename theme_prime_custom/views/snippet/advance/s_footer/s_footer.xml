<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="template_footer_style_11" name="Footer - 11" inherit_id="website.layout" active="False">
        <xpath expr="//div[@id='footer']" position="replace">
            <div id="footer" class="oe_structure oe_structure_solo template_footer_style_11" t-ignore="true" t-if="not no_footer">
                <section class="s_text_block pt64 pb32" data-snippet="s_text_block" data-name="Footer 11">
                    <div class="container">
                        <div class="row">
                            <div class="col-12 text-center mb-5">
                                <a href="/" class="o_footer_logo logo">
                                    <img src="/website/static/src/img/website_logo.svg" class="img-fluid"
                                         aria-label="Logo of MyCompany" title="MyCompany" role="img"/>
                                </a>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-3 mb-4 text-start">
                                <button class="btn w-100 d-lg-none tp-footer-collapse-btn text-start"
                                        data-bs-toggle="collapse"
                                        data-bs-target="#footer_info_util"
                                        aria-expanded="false">
                                    Información útil
                                </button>
                                <div id="footer_info_util" class="collapse d-lg-block text-start">
                                    <h5 class="d-none d-lg-block">Información útil</h5>
                                    <ul class="list-unstyled text-start">
                                        <li class="my-2"><a href="#">¿Quiénes somos?</a></li>
                                        <li class="my-2"><a href="#">Blog</a></li>
                                        <li class="my-2"><a href="#">Centro de ayuda en línea</a></li>
                                        <li class="my-2"><a href="#">Medios de pago</a></li>
                                        <li class="my-2"><a href="#">Políticas de devolución</a></li>
                                        <li class="my-2"><a href="#">Términos y condiciones</a></li>
                                    </ul>
                                </div>
                            </div>

                            <div class="col-lg-3 mb-4 text-start">
                                <button class="btn w-100 d-lg-none tp-footer-collapse-btn text-start"
                                        data-bs-toggle="collapse"
                                        data-bs-target="#footer_ayuda"
                                        aria-expanded="false">
                                    Podemos ayudarte
                                </button>
                                <div id="footer_ayuda" class="collapse d-lg-block text-start">
                                    <h5 class="d-none d-lg-block">Podemos ayudarte</h5>
                                    <ul class="list-unstyled text-start">
                                        <li class="my-2"><a href="#">Tu cuenta</a></li>
                                        <li class="my-2"><a href="#">Tus pedidos</a></li>
                                        <li class="my-2"><a href="#">Tarifas de Envío</a></li>
                                        <li class="my-2"><a href="#">Ayuda</a></li>
                                    </ul>
                                </div>
                            </div>

                            <div class="col-lg-3 mb-4 text-start text-lg-end">
                                <button class="btn w-100 d-lg-none tp-footer-collapse-btn text-start"
                                        data-bs-toggle="collapse"
                                        data-bs-target="#footer_contacto"
                                        aria-expanded="false">
                                    Contacto
                                </button>
                                <div id="footer_contacto" class="collapse d-lg-block text-start mb-3">
                                    <h5 class="d-none d-lg-block">Contacto</h5>
                                    <ul class="list-unstyled text-start">
                                        <li class="py-1">
                                            <i class="fa fa-phone me-1"/>
                                            <span class="o_force_ltr">
                                                <a href="tel:+15555555556">+1 555-555-5556</a>
                                            </span>
                                        </li>
                                        <li class="py-1">
                                            <i class="fa fa-envelope me-1"/>
                                            <a href="mailto:info@yourcompany.com">info@yourcompany.com</a>
                                        </li>
                                    </ul>
                                </div>

                                <button class="btn w-100 d-lg-none tp-footer-collapse-btn text-start"
                                        data-bs-toggle="collapse"
                                        data-bs-target="#footer_redes"
                                        aria-expanded="false">
                                    Nuestras redes
                                </button>
                                <div id="footer_redes" class="collapse d-lg-block text-start">
                                    <h5 class="d-none d-lg-block">Nuestras redes</h5>
                                    <div class="s_social_media o_not_editable d-flex gap-3 justify-content-start"
                                         data-snippet="s_social_media" contenteditable="false">
                                        <a href="/website/social/tiktok" class="s_social_media_tiktok" target="_blank">
                                            <i class="fa fa-tiktok"/>
                                        </a>
                                        <a href="/website/social/instagram" class="s_social_media_instagram" target="_blank">
                                            <i class="fa fa-instagram"/>
                                        </a>
                                        <a href="/website/social/facebook" class="s_social_media_facebook" target="_blank">
                                            <i class="fa fa-facebook"/>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </xpath>

        <xpath expr="//div[hasclass('o_footer_copyright')]/div[hasclass('container')]" position="replace">
            <div class="container text-center">
                <div class="my-2">
                    © MyCompany
                </div>
            </div>
        </xpath>
    </template>
</odoo>
