<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="template_footer_style_11"
              name="Footer - 11"
              inherit_id="website.layout"
              active="False">

        <xpath expr="//div[@id='footer']" position="replace">
            <div id="footer"
                 class="oe_structure oe_structure_solo template_footer_style_11"
                 t-ignore="true"
                 t-if="not no_footer">

                <section class="s_text_block pt64 pb32"
                         data-snippet="s_text_block"
                         data-name="Footer 11">

                    <div class="container">

                        <!-- LOGO (VISIBLE + centrado móvil / izquierda desktop) -->
                        <div class="row">
                            <div class="col-12 mb-5">
                                <div class="d-flex justify-content-center justify-content-lg-start">
                                    <a href="/" class="o_footer_logo logo">
                                        <img src="/website/static/src/img/website_logo.svg"
                                             class="img-fluid"
                                             style="max-height: 60px;"
                                             aria-label="Logo of MyCompany"
                                             title="MyCompany"
                                             role="img"/>
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="row">

                            <!-- INFORMACIÓN ÚTIL -->
                            <div class="col-lg-4 col-xl-3 mb-4">

                                <button class="btn w-100 d-lg-none tp-footer-collapse-btn"
                                        data-bs-toggle="collapse"
                                        data-bs-target="#footer_info_util">
                                    Información útil
                                    <span class="tp-collapse-icon">v</span>
                                </button>

                                <div id="footer_info_util" class="collapse d-lg-block">
                                    <h5 class="d-none d-lg-block">Información útil</h5>
                                    <ul class="list-unstyled">
                                        <li><a href="#">¿Quiénes somos?</a></li>
                                        <li><a href="#">Blog</a></li>
                                        <li><a href="#">Centro de ayuda</a></li>
                                        <li><a href="#">Medios de pago</a></li>
                                        <li><a href="#">Políticas de devolución</a></li>
                                        <li><a href="#">Términos y condiciones</a></li>
                                    </ul>
                                </div>
                            </div>

                            <!-- PODEMOS AYUDARTE -->
                            <div class="col-lg-4 col-xl-3 mb-4">

                                <button class="btn w-100 d-lg-none tp-footer-collapse-btn"
                                        data-bs-toggle="collapse"
                                        data-bs-target="#footer_ayuda">
                                    Podemos ayudarte
                                    <span class="tp-collapse-icon">v</span>
                                </button>

                                <div id="footer_ayuda" class="collapse d-lg-block">
                                    <h5 class="d-none d-lg-block">Podemos ayudarte</h5>
                                    <ul class="list-unstyled">
                                        <li><a href="#">Tu cuenta</a></li>
                                        <li><a href="#">Tus pedidos</a></li>
                                        <li><a href="#">Tarifas de envío</a></li>
                                        <li><a href="#">Ayuda</a></li>
                                    </ul>
                                </div>
                            </div>

                            <!-- CONTACTO + REDES (A LA DERECHA, TEXTO A LA IZQUIERDA) -->
                            <div class="col-lg-4 col-xl-4 mb-4 ms-lg-auto">

                                <button class="btn w-100 d-lg-none tp-footer-collapse-btn"
                                        data-bs-toggle="collapse"
                                        data-bs-target="#footer_contacto">
                                    Contacto
                                    <span class="tp-collapse-icon">v</span>
                                </button>

                                <div id="footer_contacto" class="collapse d-lg-block">
                                    <h5 class="d-none d-lg-block">Contacto</h5>

                                    <ul class="list-unstyled">
                                        <li>
                                            <i class="fa fa-phone me-1"/>
                                            <a href="tel:+15555555556">+1 555-555-5556</a>
                                        </li>
                                        <li>
                                            <i class="fa fa-envelope me-1"/>
                                            <a href="mailto:info@yourcompany.com">info@yourcompany.com</a>
                                        </li>
                                    </ul>

                                    <h5 class="mt-3 d-none d-lg-block">Follow Us On</h5>
                                    <div class="s_social_media o_not_editable d-flex gap-3"
                                         data-snippet="s_social_media"
                                         contenteditable="false">
                                        <a href="/website/social/tiktok"><i class="fa fa-tiktok"/></a>
                                        <a href="/website/social/instagram"><i class="fa fa-instagram"/></a>
                                        <a href="/website/social/facebook"><i class="fa fa-facebook"/></a>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </section>
            </div>
        </xpath>

        <!-- COPYRIGHT -->
        <xpath expr="//div[hasclass('o_footer_copyright')]/div[hasclass('container')]" position="replace">
            <div class="container text-center">
                <div class="my-2">© MyCompany</div>
            </div>
        </xpath>

    </template>
</odoo>
