<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Create Groups -->
        <record id="category_api_administrator" model="ir.module.category">
            <field name="name">Control de apis</field>
            <field name="sequence">60</field>
        </record>
        <record id="category_api_administrator_access" model="ir.module.category">
            <field name="name">Control de Acceso a Apis</field>
            <field name="sequence">6</field>
            <field name="parent_id" ref="category_api_administrator"/>
        </record>
        <record id="group_api_administrator_basic" model="res.groups">
            <field name="name">Permiso de acceso.</field>
            <field name="category_id" ref="api_administrator.category_api_administrator_access"/>
            <field name="comment">Administrador de apis </field>
        </record> 
        
        <!-- Create Groups -->
        <record id="rule_api_administrator" model="ir.rule">
            <field name="name">rule.api.administrator</field>
            <field name="model_id" ref="model_api_administrator"/>
            <field name="groups" eval="[(4, ref('api_administrator.group_api_administrator_basic'))]"/>
            <field name="domain_force">['|',('id', '=', user.id),('id', '!=', False)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>  
    </data>
</odoo>