<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="product_tabs_inherit" inherit_id="theme_prime.product_tabs" name="Herencia Product Tabs">
        <xpath expr="//li[@t-if='product_documents_ids']/a/span" position="replace">
            <span class="fa fa-file-pdf-o me-1"/> Descargar Ficha Técnica
        </xpath>
    </template>

    <!--Apartado para ocultar sección de item found-->
    <template id="inherit_shop_layout_add_mobile_class" inherit_id="theme_prime.shop_layout">
        <xpath expr="//div[contains(@t-attf-class, 'tp-shop-topbar')]" position="attributes">
            <attribute name="t-attf-class"> py-2 tp-shop-topbar shop-mobile-header #{_bordered_classes} </attribute>
        </xpath>
    </template>

    <!--Apartado para filtros-->
    <template id="theme_prime_filters_title_inside_card" inherit_id="theme_prime.shop_layout">
        <xpath expr="//div[contains(@t-attf-class,'_filter_extra_content_classes')]" position="inside">
            <div class="tp-filters-header d-none d-lg-block">
                <span class="tp-filters-title">Filtros</span>
            </div>
        </xpath>
    </template>

    <!-- Marca del producto -->
    <template id="product_item_inherit_brand" inherit_id="theme_prime.product_item" name="Theme Prime: Product Item Inherit Brand">
        <xpath expr="//h6[@class='mb-1 tp-product-title']" position="inside">
            <t t-if="product.brand_id">
                <span class="tp-product-brand d-block text-muted" t-field="product.brand_id.name"/>
            </t>
        </xpath>
    </template>



</odoo>

