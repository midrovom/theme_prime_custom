<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="product_tabs_inherit" inherit_id="theme_prime.product_tabs" name="Herencia Product Tabs">
        <xpath expr="//li[@t-if='product_documents_ids']/a/span" position="replace">
            <span class="fa fa-file-pdf-o me-1"/> Descargar Ficha Técnica
        </xpath>
    </template>

<!--Apartado para ocultar sección de item found-->
    <template id="inherit_shop_layout_add_mobile_class" inherit_id="theme_prime.shop_layout">
        <xpath expr="//div[contains(@t-attf-class, 'tp-shop-topbar')]" position="attributes">
            <attribute name="t-attf-class"> py-2 tp-shop-topbar shop-mobile-header #{_bordered_classes} </attribute>
        </xpath>
    </template>


</odoo>

