<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="product_tabs_inherit" inherit_id="theme_prime.product_tabs" name="Herencia Product Tabs">
        <xpath expr="//li[@t-if='product_documents_ids']/a/span" position="replace">
            <span class="fa fa-file-pdf-o me-1"/> Descargar Ficha Técnica
        </xpath>
    </template>

    <!--Apartado para ocultar sección de item found-->
    <template id="inherit_shop_layout_add_mobile_class" inherit_id="theme_prime.shop_layout">
        <xpath expr="//div[contains(@t-attf-class, 'tp-shop-topbar')]" position="attributes">
            <attribute name="t-attf-class"> py-2 tp-shop-topbar shop-mobile-header #{_bordered_classes} </attribute>
        </xpath>
    </template>

    <!-- Marca del producto -->
    <template id="product_item_grid_1_inherit_brand" inherit_id="theme_prime.product_item_grid_2">
        <xpath expr="//h6[@class='mb-1 tp-product-title']" position="before">
            <t t-foreach="product.attribute_line_ids" t-as="line">
                <t t-if="line.attribute_id.dr_is_brand">
                    <span class="tp-product-brand d-block text-muted">
                        <t t-foreach="line.value_ids" t-as="val">
                            <t t-esc="val.name"/>
                        </t>
                    </span>
                </t>
            </t>
        </xpath>
    </template>

    <!--Apartado para filtros-->

    <template id="shop_layout_add_filters_header" inherit_id="theme_prime.shop_layout" name="Shop Layout: Add Filters Header">
        <xpath expr="//div[@id='products_grid_before']" position="after">
            <div class="tp-filters-header d-none d-lg-block">
                <span class="tp-filters-title">Filtros</span>
            </div>
        </xpath>
    </template>

    <!-- <template id="theme_prime_filters_title_inside_card" inherit_id="theme_prime.shop_layout">
        <xpath expr="//div[contains(@t-attf-class,'_filter_extra_content_classes')]" position="before">
            <div class="tp-filters-header d-none d-lg-block">
                <span class="tp-filters-title">Filtros</span>
            </div>
        </xpath>
    </template> -->


</odoo>

