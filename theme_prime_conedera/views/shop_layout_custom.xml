<odoo>
    <template id="shop_layout_filters_only_filter_attribute" inherit_id="theme_prime.shop_layout_filters">
        <xpath expr="//t[@t-foreach='attributes']" position="replace">
            <t t-foreach="attributes.filtered(lambda a: a.filter_attribute)" t-as="attribute">
                <li t-if="attribute.value_ids and len(attribute.value_ids) &gt; 1 and attribute.visibility == 'visible'"
                    t-attf-class="nav-item tp-filter-attribute #{_filter_attribute_classes}">
                    <!-- VARIABLES OBLIGATORIAS -->
                    <t t-set="string">
                        <span t-field="attribute.name"/>
                    </t>
                    <t t-set="is_selected" t-value="attribute.id in attributes_ids"/>
                    <t t-set="show_search"
                       t-value="attribute.dr_is_show_shop_search and attribute.display_type != 'select'"/>

                    <t t-set="name" t-value="'attribute_%s' % attribute.id"/>
                    <t t-set="items" t-value="attribute.value_ids"/>
                    <t t-set="selected" t-value="attrib_set"/>
                    <t t-set="is_attribute" t-value="attribute"/>
                    <t t-set="hide_extra_value"
                       t-value="_config_shop_filters.get('hide_extra_attrib_value')"/>
                    <t t-set="show_count" t-value="_filter_show_attribute_count"/>
                    <t t-set="count_list" t-value="get_attrib_count"/>
                    <!-- LLAMADA FINAL -->
                    <t t-call="theme_prime.filter_attribute"/>
                </li>
            </t>
        </xpath>
    </template>



